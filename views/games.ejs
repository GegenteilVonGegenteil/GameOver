<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GameOver - Games</title>
        <link href="css/style.css" rel="stylesheet">
    </head>
    <body>
        <%- include("header") -%>
        <main>
            <h1>games</h1>
            <div class="list">
                <% games.forEach(game => { %>
                    <div class="item game">
                        <a href="/games/<%= game.gameId %>">
                            <p class="releaseyear">
                                <% if (game.releaseyear) {%>
                                    <%= game.releaseyear %>
                                <%} else {%>
                                    unknown
                                <%}%>
                            </p>
                            <img src="images/games/<%= game.gameId%>.png" alt="<%= game.name %>" class="gameImage" onerror="this.onerror=null;this.src='../../images/MissingNo.png';">
                            <h2><%= game.name %></h2>
                        </a>
                    </div>
                <% }) %>
            </div>
        </main>
    </body>
</html>